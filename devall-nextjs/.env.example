# DevAll - Environment Variables Example
# Copy this file to .env.local and fill in your values

# ===================================
# Email Service Configuration
# ===================================
# Choose one email service and configure accordingly

# Option 1: Resend (Recommended - 3000 free emails/month)
# Get API key from: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@devall.com
EMAIL_TO=contact@devall.com

# Option 2: SendGrid (100 free emails/day)
# Get API key from: https://sendgrid.com
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# EMAIL_FROM=noreply@devall.com
# EMAIL_TO=contact@devall.com

# Option 3: Nodemailer (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@devall.com
# EMAIL_TO=contact@devall.com

# ===================================
# Site Configuration
# ===================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=DevAll - Digitalise Solutions

# ===================================
# Analytics (Optional)
# ===================================
# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (Automatically enabled on Vercel)
# No configuration needed

# ===================================
# Development
# ===================================
# Enable debug mode for form submissions
# DEBUG_MODE=true
